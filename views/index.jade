doctype html
html
  head
    //- link(rel='stylesheet', href='/stylesheets/style.css')
  body(ng-app="Intercom")
    form(ng-controller="FormController as form")
      input(name="email" type="email" ng-model="user.email" required)
      input(name="password" type="text" ng-model="user.password" required)
      input(name="confirm-password" type="text" ng-model="user.confirm" required)
      input(type="button" ng-click="form.submit(user)")
      
